<nav class="store-nav">
  <h3>Shop Collections</h3>
  <ul class="nl">
    {% for collection in collections %}
      {% unless collection.handle == 'frontpage' or collection.handle == 'sale' %}
        <li><a href="{{ collection.url }}">{{ collection.title }}</a></li>
      {% endunless %}
    {% endfor %}
  </ul>
</nav>
<nav class="store-mobileNav">
  <div class="form-select">
    <select id="nav_collection">
      <option>Browse Collections</option>
      {% for collection in collections %}
        <option value="{{ collection.url }}">{{ collection.title }}</option>
      {% endfor %}
    </select>
    <svg aria-hidden class="form-select-icn icn icn--arrow" role="img" viewbox="0 0 512 512">
      <use xlink:href="{{ image-icons.svg | asset_url }}#arrow"></use>
    </svg>
  </div>
</nav>
