<header class="header">
  <a class="header-logo" href="/">
    <div class="logo logo--v">
      <div class="logo-mark"><img src="{{ 'image-deux-mains-logomark.svg' | asset_url }}"/></div>
      <div class="logo-word"><img src="{{ 'image-deux-mains-wordmark.svg' | asset_url }}" alt="{{ shop.name }}"/></div>
    </div>
  </a>
  <a class="header-back" href="/">‚Üê Back to Shop</a>
  <a class="header-cart" href="/cart">
    Cart
    {% if cart.item_count > 0 %}
      <div class="header-cart-badge">{{ cart.item_count }}</div>
    {% %}
  </a>
  <h1 class="header-title" itemprop="name">{{ shop.name }}</h1>
</header>
